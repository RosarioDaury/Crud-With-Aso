@model Person 
@{
    ViewBag.Title = "Edit";
}

<h3>@ViewBag.Title - @Model.PersonName</h3>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-controller="Home" method="post" enctype="multipart/form-data">
            @Html.HiddenFor(d => d.Id)

            <div>
                @Html.LabelFor(d => d.PersonName)
                @Html.TextBoxFor(d => d.PersonName, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.PersonName, null, new { @class = "danger" })
            </div>

            <div>
                @Html.LabelFor(d => d.PersonLastName)
                @Html.TextBoxFor(d => d.PersonLastName, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.PersonLastName, null, new { @class = "danger" })
            </div>

            <div>
                @Html.LabelFor(d => d.Profesion)
                @Html.TextBoxFor(d => d.Profesion, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Profesion, null, new { @class = "danger" })
            </div>

            <div style="text-align:center;">
                <br>
                <br>
                <br>
                <input type="file" id="image" name="image" asp-for="@Model.Img" />
                @Html.ValidationMessageFor(d => d.Img, null, new { @class = "danger" })
            </div>

            <div>
                <input type="submit" class="btn btn-success" style="margin:20px;" value="Save">
            </div>
        </form>
    </div>
</div>